/* You can add global styles to this file, and also import other style files */
@import './theme.styl'

p
  color primary-text !important

.move-down
  margin-top 10px

.full-width
  width 100%

.error-text
  color red !important

.clickable-text
  cursor pointer
  color accent

.page-content
  background-color white
  padding 20px
  border 1px solid #EEE
  margin-bottom 30px

.alternative-link-container
  margin-top 40px
  .alternative-link
    color accent

.custom-card
  display flex
  flex 1
  flex-direction row
  padding 20px
  margin 10px 0
  box-shadow 0 1px 3px 0 #e6ebf1
  border 0.5px solid #EEE

  .custom-card-icon
    flex 1
    display flex
    flex-direction column
    justify-content center

    .custom-card-icon-circle
      width 40px
      height 40px
      border-radius 20px
      background-color accent
      display flex
      justify-content center
      align-items center

      fa-icon
        font-size 20px
        color white
