.dialog-box
  position relative
  .results-list
    margin 20px 0

    .result-item
      height auto

  .buttons
    justify-content flex-end

  img
    width 80px
    height 80px
    border-radius 50%
    margin-bottom 10px

  .selected-user-details
    display flex
    justify-content center
    align-items center
    flex-direction column

  .change-btn
    position absolute
    top 0
    right 0
    font-size 18px

  .spinner-container
    display flex
    justify-content center
