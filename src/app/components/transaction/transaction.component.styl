@import '../../../theme.styl'

.transaction
  display flex
  flex 1
  flex-direction row
  padding 20px
  margin 10px 0
  box-shadow 0 1px 3px 0 #e6ebf1
  border 0.5px solid #EEE

  .transaction-icon
    flex 1
    display flex
    flex-direction column
    justify-content center

    .icon-circle
      width 40px
      height 40px
      border-radius 20px
      background-color accent
      display flex
      justify-content center
      align-items center

      fa-icon
        font-size 20px
        color white

  .transaction-text
    flex 6
    display flex
    flex-direction column
    justify-content center

    .text
      font-size 16px

    .time
      font-size 14px
      color upper-mid-grey !important
      margin 0

  .transaction-balance
    flex 2
    text-align right
    flex-direction row
    justify-content flex-end
    align-items center
    display flex

    .balance-detail
      margin-left 10px

      &.positive
        color green

      &.negative
        color red
