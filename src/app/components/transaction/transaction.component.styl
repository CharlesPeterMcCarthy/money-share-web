@import '../../../theme.styl'

.custom-card
  .transaction-text
    flex 6
    display flex
    flex-direction column
    justify-content center

    .text
      font-size 16px

    .time
      font-size 14px
      color upper-mid-grey !important
      margin 0

  .transaction-balance
    flex 2
    text-align right
    flex-direction row
    justify-content flex-end
    align-items center
    display flex

    .balance-detail
      margin-left 10px

      &.positive
        color green

      &.negative
        color red
