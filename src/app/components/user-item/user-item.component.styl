:host
  flex 1

.user-item
  display flex
  flex-direction row
  padding 10px
  border 0.5px solid #EEE
  cursor pointer

  .avatar
    flex 1
    display flex

    img
      width 40px
      height 40px
      border-radius 50%

  .name
    flex 3
    display flex
    flex-direction column
    justify-content center

  .email
    flex 3
    display flex
    flex-direction column
    justify-content center
